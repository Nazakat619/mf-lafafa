<div class="container" style="background-color:white">
    @{
        if (Model == null)
        {
            <h2 style=" text-align:center;">*No Record Found</h2>
        }
        else
        {

            <div class="container-fluid">
                <br /><p style="font-family:'Hobo Std'; font-size: xx-large; text-align:center"> All Order Details </p>
                <p style="font-family:'Hobo Std'; font-size: medium; text-align:center"> M.F Lafafa Makers</p>
                <hr />
                <table class="table table-striped  table-hover">
                    <tbody style="font-weight:bold;">
                        <tr>
                            <th> Bill No.  </th>
                            <th> Shop Name </th>
                            <th> Order No. </th>
                            <th> Large Env.</th>
                            <th> Small Env.</th>
                            <th> Amount </th>
                            <th> Date </th>

                        </tr>
                    </tbody>
                    @foreach (var rec in Model)
                    {
                        <tbody>
                            <tr>
                                <td><b> @rec.billNo </b></td>
                                <td><b> @rec.shopName </b></td>
                                <td> @rec.orderNo </td>
                                <td> @rec.large </td>
                                <td> @rec.small </td>
                                <td> @(rec.amount)/- </td>
                                <td> @rec.date </td>

                            </tr>
                        </tbody>
                    }

                </table>
            </div>

            <div style="font-family:'Hobo Std'; font-size:x-large; margin-left:5%;">Total Amount: <mark style="color: #B40404"> Rs. @(ViewBag.SubTotal)/-  </mark></div>

        }

    }    <br /><br />
</div>
<br /><br /><br />

