@Scripts.Render("~/Scripts/jquery-1.8.2")
@Scripts.Render("~/bundles/jquery")
<script>

    $(document).ready(function () {
        $('#checking').hide();
        $('#submitBtn').attr('disabled', 'disabled');
        //$('#b1').click(function ()

        $('#billNo').focusout(function () {

            var checkBillNo = $('#billNo').val();

            // alert('User Name ='+ userName);
            $('#checking').show();

            $.getJSON("/Home/ValidateBillNo?checkBillNo=" + checkBillNo, function (data) {
                $('#checking').hide();
                if (data) {
                    $('#submitBtn').attr('disabled', 'disabled');
                    $('#result').text("*ERROR!! (Bill Number Not Unique)");

                }
                else {
                    $('#result').text("");
                    $('#submitBtn').removeAttr('disabled');
                }

            });

        });

    });
</script>
